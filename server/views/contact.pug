extends layout

block content
  h1= t.CONTACT.TITLE

  .contact
    .contact-info
      p
        span= t.CONTACT.LAB_LONG_TITLE

      p
        span #[a(href="https://www.polymtl.ca") Polytechnique Montréal]
        br
        span
          a(href="https://www.polymtl.ca/gigl/")= t.CONTACT.DEPARTMENT_TITLE

      p
        span 2900 Boulevard Edouard-Montpetit
        br
        span Montréal, Québec
        br
        span H3T 1J4

      p
        = t.CONTACT.FOR_MORE_INFO_TXT
        | #{' '}
        a(href="mailto:michel.deslauriers@polymtl.quebec") Michel Deslauriers
        | #{' '}
        = t.GENERAL.OR
        | #{' '}
        a(href="mailto:alphonsine.beauchamps@polymtl.quebec") Alphonsine Beauchamps

    .map
      <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=-73.61544996500017%2C45.503713277205%2C-73.6136716604233%2C45.50541264604301&amp;layer=mapnik&amp;marker=45.50456296803629%2C-73.61456081271172" style="border: 1px solid black"></iframe>

block script-content
  script.
    document.addEventListener("DOMContentLoaded", event => {
      document.getElementById('contact-link').classList.add('active');
    });


